{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "esnext",
    "target": "es2020",

    // âœ… Path alias fix
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}

